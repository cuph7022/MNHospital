<Window x:Class="MNHospital_WPF.Views.client.UpdatePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cập Nhật Mật Khẩu" Height="351" Width="433">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Mật khẩu cũ" FontSize="14" Margin="0,5"/>
            <PasswordBox x:Name="txtOldPassword" Margin="0,10" Height="30"/>

            <TextBlock Text="Mật khẩu mới" FontSize="14" Margin="0,5"/>
            <PasswordBox x:Name="txtNewPassword" Margin="0,10" Height="30"/>

            <TextBlock Text="Nhập lại mật khẩu mới" FontSize="14" Margin="0,5"/>
            <PasswordBox x:Name="txtConfirmPassword" Margin="0,10" Height="30"/>

            <Button Content="Cập nhật" Width="100" Height="35" Margin="0,20,0,0" VerticalAlignment="Center" Click="BtnUpdatePassword_Click"/>
        </StackPanel>
    </Grid>
</Window>
